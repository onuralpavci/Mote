<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:layout_height="@dimen/default_taskbar_height"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/contentTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/spacing_normal"
        android:textAppearance="@style/TextAppearance.2XS.Inter"
        tools:text="" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bookmarkButton"
        style="@style/Button.Secondary.Icon"
        android:layout_width="@dimen/default_taskbar_height"
        android:layout_height="@dimen/default_taskbar_height"
        app:icon="@drawable/ic_bookmark" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteButton"
        style="@style/Button.Primary.Icon"
        android:layout_width="@dimen/default_taskbar_height"
        android:layout_height="@dimen/default_taskbar_height"
        app:icon="@drawable/ic_delete" />
</merge>
